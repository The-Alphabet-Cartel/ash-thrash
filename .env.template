NLP_THRESHOLD_WEIGHTED_NEGATIVE_TO_LOW=0.782                                    # Negative to low threshold (weighted mode)
NLP_THRESHOLD_WEIGHTED_UNKNOWN_TO_LOW=0.582                                     # Unknown to low threshold (weighted mode)

# Weighted Ensemble Thresholds - Ensemble decision thresholds for weighted mode
NLP_THRESHOLD_WEIGHTED_ENSEMBLE_CRITICAL=0.791                                  # Critical crisis ensemble threshold (weighted)
NLP_THRESHOLD_WEIGHTED_ENSEMBLE_HIGH=0.316                                      # High crisis ensemble threshold (weighted)
NLP_THRESHOLD_WEIGHTED_ENSEMBLE_MEDIUM=0.241                                    # Medium crisis ensemble threshold (weighted)
NLP_THRESHOLD_WEIGHTED_ENSEMBLE_LOW=0.211                                       # Low crisis ensemble threshold (weighted)

# Consensus Mode Thresholds - Conservative thresholds requiring model agreement
NLP_THRESHOLD_CONSENSUS_CRISIS_TO_HIGH=0.500                                    # Crisis to high threshold (consensus mode)
NLP_THRESHOLD_CONSENSUS_CRISIS_TO_MEDIUM=0.300                                  # Crisis to medium threshold (consensus mode)
NLP_THRESHOLD_CONSENSUS_MILD_CRISIS_TO_LOW=0.100                                # Mild crisis to low threshold (consensus mode)
NLP_THRESHOLD_CONSENSUS_NEGATIVE_TO_LOW=0.700                                   # Negative to low threshold (consensus mode)
NLP_THRESHOLD_CONSENSUS_UNKNOWN_TO_LOW=0.500                                    # Unknown to low threshold (consensus mode)

# Consensus Ensemble Thresholds - Ensemble decision thresholds for consensus mode
NLP_THRESHOLD_CONSENSUS_ENSEMBLE_CRITICAL=0.700                                 # Critical crisis ensemble threshold (consensus)
NLP_THRESHOLD_CONSENSUS_ENSEMBLE_HIGH=0.450                                     # High crisis ensemble threshold (consensus)
NLP_THRESHOLD_CONSENSUS_ENSEMBLE_MEDIUM=0.250                                   # Medium crisis ensemble threshold (consensus)
NLP_THRESHOLD_CONSENSUS_ENSEMBLE_LOW=0.120                                      # Low crisis ensemble threshold (consensus)

# Majority Mode Thresholds - Balanced thresholds for democratic decision making
NLP_THRESHOLD_MAJORITY_CRISIS_TO_HIGH=0.514                                     # Crisis to high threshold (majority mode)
NLP_THRESHOLD_MAJORITY_CRISIS_TO_MEDIUM=0.322                                   # Crisis to medium threshold (majority mode)
NLP_THRESHOLD_MAJORITY_MILD_CRISIS_TO_LOW=0.422                                 # Mild crisis to low threshold (majority mode)
NLP_THRESHOLD_MAJORITY_NEGATIVE_TO_LOW=0.722                                    # Negative to low threshold (majority mode)
NLP_THRESHOLD_MAJORITY_UNKNOWN_TO_LOW=0.522                                     # Unknown to low threshold (majority mode)

# Majority Ensemble Thresholds - Ensemble decision thresholds for majority mode
NLP_THRESHOLD_MAJORITY_ENSEMBLE_CRITICAL=0.650                                  # Critical crisis ensemble threshold (majority)
NLP_THRESHOLD_MAJORITY_ENSEMBLE_HIGH=0.484                                      # High crisis ensemble threshold (majority)
NLP_THRESHOLD_MAJORITY_ENSEMBLE_MEDIUM=0.272                                    # Medium crisis ensemble threshold (majority)
NLP_THRESHOLD_MAJORITY_ENSEMBLE_LOW=0.152                                       # Low crisis ensemble threshold (majority)

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# High Test Settings
THRASH_HIGH_PRIORITY=high,critical                                              # Expected Priorities (comma separated)
THRASH_HIGH_TARGET=95                                                           # Passing Score Target
THRASH_HIGH_CRITICAL=true                                                       # Critical Category
THRASH_HIGH_ESCALATION=true                                                     # Allow Escalation
THRASH_HIGH_DEESCALATION=false                                                  # Allow De-escalation

# Medium Test Settings
THRASH_MEDIUM_PRIORITY=medium                                                   # Expected Priorities (comma separated)
THRASH_MEDIUM_TARGET=85                                                         # Passing Score Target
THRASH_MEDIUM_CRITICAL=false                                                    # Critical Category
THRASH_MEDIUM_ESCALATION=false                                                  # Allow Escalation
THRASH_MEDIUM_DEESCALATION=false                                                # Allow De-escalation

# Low Test Settings
THRASH_LOW_PRIORITY=none,low,medium                                             # Expected Priorities (comma separated)
THRASH_LOW_TARGET=85                                                            # Passing Score Target
THRASH_LOW_CRITICAL=false                                                       # Critical Category
THRASH_LOW_ESCALATION=true                                                      # Allow Escalation
THRASH_LOW_DEESCALATION=true                                                    # Allow De-escalation

# None Test Settings
THRASH_NONE_PRIORITY=none,low                                                   # Expected Priorities (comma separated)
THRASH_NONE_TARGET=95                                                           # Passing Score Target
THRASH_NONE_CRITICAL=false                                                      # Critical Category
THRASH_NONE_ESCALATION=true                                                     # Allow Escalation
THRASH_NONE_DEESCALATION=false                                                  # Allow De-escalation

# Medium/High Test Settings
THRASH_MEDIUM_HIGH_PRIORITY=medium,high,critical                                # Expected Priorities (comma separated)
THRASH_MEDIUM_HIGH_TARGET=90                                                    # Passing Score Target
THRASH_MEDIUM_HIGH_CRITICAL=true                                                # Critical Category
THRASH_MEDIUM_HIGH_ESCALATION=true                                              # Allow Escalation
THRASH_MEDIUM_HIGH_DEESCALATION=true                                            # Allow De-escalation

# Low/Medium Test Settings
THRASH_LOW_MEDIUM_PRIORITY=low,medium                                           # Expected Priorities (comma separated)
THRASH_LOW_MEDIUM_TARGET=85                                                     # Passing Score Target
THRASH_LOW_MEDIUM_CRITICAL=false                                                # Critical Category
THRASH_LOW_MEDIUM_ESCALATION=true                                               # Allow Escalation
THRASH_LOW_MEDIUM_DEESCALATION=true                                             # Allow De-escalation

# Low/None Test Settings
THRASH_LOW_NONE_PRIORITY=none,low                                               # Expected Priorities (comma separated)
THRASH_LOW_NONE_TARGET=90                                                       # Passing Score Target
THRASH_LOW_NONE_CRITICAL=false                                                  # Critical Category
THRASH_LOW_NONE_ESCALATION=true                                                 # Allow Escalation
THRASH_LOW_NONE_DEESCALATION=true                                               # Allow De-escalation

# Multipliers
THRASH_FALSE_NEGATIVE_MULTIPLIER=3.0
THRASH_CRITICAL_CATEGORY_MULTIPLIER=1.5

# Test Execution Settings
THRASH_ENABLE_EARLY_TERMINATION=false
THRASH_MAX_CONCURRENT_TESTS=3
THRASH_TEST_DELAY_MS=300
THRASH_FAILURE_HALT_THRESHOLD=30
THRASH_PROGRESS_REPORT_INTERVAL=10

# =============================================================================
# CLASSIFICATION SYSTEM
# =============================================================================
# Client Classification Core Settings
THRASH_CLIENT_CLASSIFICATION_STRATEGY=conservative
THRASH_ENABLE_CLIENT_CLASSIFICATION=true
THRASH_DEFAULT_THRESHOLD_CONFIG=standard

# Crisis Score Analysis (from previous phase)
THRASH_CRISIS_SCORE_VARIANCE_THRESHOLD=0.15
THRASH_CRISIS_SCORE_BOUNDARY_SENSITIVITY=0.05
THRASH_CRISIS_SCORE_CORRELATION_SIGNIFICANCE=0.70

# Performance Monitoring
THRASH_TRACK_CLASSIFICATION_STATS=true
THRASH_LOG_CLASSIFICATION_DISAGREEMENTS=true

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Directories
THRASH_RESULTS_DIR=./results
THRASH_REPORTS_DIR=./reports
THRASH_PHRASES_DIR=./config/phrases
THRASH_LOGS_DIR=./logs

# Cache Settings
THRASH_ENABLE_CONFIG_CACHING=true
THRASH_CONFIG_CACHE_MAX_ENTRIES=50
THRASH_CONFIG_CACHE_TTL_SECONDS=300
THRASH_CONFIG_CACHE_MAX_MEMORY_MB=25
THRASH_CONFIG_CACHE_FILE_WATCHING=true

# Logging Configuration
THRASH_LOG_FILE=ash-thrash.log
THRASH_LOGGING_ENABLE_DETAILED=true
THRASH_LOGGING_INCLUDE_RAW_LABELS=true
THRASH_LOGGING_TRACE_REQUESTS=true
THRASH_LOGGING_CONFIG_LOADING=true
THRASH_LOGGING_MANAGER_INIT=true
THRASH_LOGGING_ENV_VARS=true

