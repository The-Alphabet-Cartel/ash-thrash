# NLP SERVER INTEGRATION
# =============================================================================
# NLP Server Connection (your AI server)
GLOBAL_NLP_API_URL=http://172.20.0.11:8881
GLOBAL_LOG_LEVEL=INFO
GLOBAL_LOGGING_ENABLE_CONSOLE=true
GLOBAL_LOGGING_ENABLE_FILE=true
GLOBAL_LEARNING_SYSTEM_ENABLED=false                                            # Disable learning during testing
NLP_SERVER_TIMEOUT=30

# Weighted Mode Thresholds - Higher thresholds accounting for model weighting
NLP_THRESHOLD_WEIGHTED_CRISIS_TO_HIGH=0.598                                     # Crisis to high threshold (weighted mode)
NLP_THRESHOLD_WEIGHTED_CRISIS_TO_MEDIUM=0.441                                   # Crisis to medium threshold (weighted mode)
