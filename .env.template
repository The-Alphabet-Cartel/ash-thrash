# =============================================================================
# NLP SERVER INTEGRATION
# =============================================================================
# NLP Server Connection (your AI server)
GLOBAL_NLP_API_URL=http://10.20.30.253:8881
NLP_SERVER_TIMEOUT=30

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# API Server Settings
GLOBAL_THRASH_API_PORT=8884
THRASH_API_HOST=0.0.0.0

# Security & Authentication  
GLOBAL_SESSION_TOKEN=your_secure_secret_key_here_change_in_production
THRASH_API_RATE_LIMIT=100
THRASH_ENABLE_API_AUTHENTICATION=false
GLOBAL_ALLOWED_IPS=10.20.30.0/24,172.20.0.0/16,127.0.0.1,::1

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Execution Settings
THRASH_MAX_CONCURRENT_TESTS=3

# Quick Test Settings
THRASH_QUICK_TEST_SAMPLE_SIZE=50

# Test Results Storage
THRASH_RESULTS_RETENTION_DAYS=30
THRASH_AUTO_CLEANUP_RESULTS=true

# =============================================================================
# DISCORD INTEGRATION
# =============================================================================
# Discord Webhook for Test Results (optional)
DISCORD_WEBHOOK_URL=
DISCORD_WEBHOOK_USERNAME=Ash-Thrash
DISCORD_NOTIFICATIONS_ENABLED=true

# Notification Settings
NOTIFY_ON_COMPREHENSIVE_TESTS=true
NOTIFY_ON_QUICK_TESTS=false
NOTIFY_ON_CATEGORY_TESTS=false
NOTIFY_ON_FAILURES_ONLY=false

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Logging Configuration
GLOBAL_LOG_LEVEL=INFO
THRASH_LOG_FILE=ash-thrash.log
THRASH_ENABLE_DEBUG_LOGGING=false

# Debug Mode
GLOBAL_ENABLE_DEBUG_MODE=false

# Performance Settings
THRASH_REQUEST_TIMEOUT=30
THRASH_CONNECTION_POOL_SIZE=10

# =============================================================================
# TUNING SUGGESTIONS CONFIGURATION
# =============================================================================
# When to generate tuning suggestions
THRASH_GENERATE_SUGGESTIONS=true
THRASH_SUGGESTION_THRESHOLD=10.0  # Generate suggestions if >10% below target
THRASH_CRITICAL_THRESHOLD=20.0    # Mark as critical if >20% below target

# NLP Environment Variable Suggestions
# These are the actual variable names that ash-thrash will suggest adjusting
NLP_HIGH_CRISIS_THRESHOLD=0.8
NLP_MEDIUM_CRISIS_THRESHOLD=0.6
NLP_LOW_CRISIS_THRESHOLD=0.4
NLP_NONE_THRESHOLD=0.3

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Test Execution
THRASH_RETRY_FAILED_TESTS=true
THRASH_MAX_RETRIES=3
THRASH_RETRY_DELAY_SECONDS=5

# API Response Caching (for better dashboard performance)
THRASH_ENABLE_RESULT_CACHING=true
THRASH_CACHE_TTL_SECONDS=300

# Health Check Settings
THRASH_HEALTH_CHECK_INTERVAL=30
THRASH_NLP_HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# DEVELOPMENT SETTINGS (disable in production)
# =============================================================================
# Development Mode
THRASH_DEVELOPMENT_MODE=false
THRASH_ENABLE_API_DOCS=true
THRASH_ENABLE_CORS=true
THRASH_CORS_ORIGINS=*

# Test Data Validation
THRASH_VALIDATE_DATA_ON_STARTUP=true
THRASH_STRICT_VALIDATION=true

