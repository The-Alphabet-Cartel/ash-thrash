THRASH_CRITICAL_THRESHOLD=20.0                                                  # Mark as critical if >20% below target

# =============================================================================
# Tuning Settings
# =============================================================================
# Confidence Levels
THRASH_CONFIDENCE_HIGH_MIN=0.700
THRASH_CONFIDENCE_MEDIUM_MIN=0.500
THRASH_CONFIDENCE_LOW_MIN=0.300

# Safety Parameters
THRASH_FALSE_NEGATIVE_WEIGHT=3.0
THRASH_CRITICAL_CATEGORY_WEIGHT=2.0
THRASH_MIN_IMPROVEMENT_THRESHOLD=0.05
THRASH_MAX_RISK_TOLERANCE=high                                                  # Risk tolerance level (none, low, moderate, high)

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Test Execution
THRASH_RETRY_FAILED_TESTS=true
THRASH_MAX_RETRIES=3
THRASH_RETRY_DELAY=1000
