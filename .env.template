# =============================================================================
# ASH-THRASH TESTING SUITE CONFIGURATION v3.0
# Environment variables for Ash-Thrash
# Repository: https://github.com/the-alphabet-cartel/ash-thrash
# Part of: The Alphabet Cartel (https://discord.gg/alphabetcartel) Ash Ecosystem
# =============================================================================
# NLP SERVER INTEGRATION
# =============================================================================
# NLP Server Connection (your AI server)
GLOBAL_NLP_API_URL=http://10.20.30.253:8881
GLOBAL_SESSION_TOKEN=/run/secrets/session_token                                 # Docker secret for API Secret Token
GLOBAL_LOG_LEVEL=INFO
GLOBAL_LOGGING_ENABLE_CONSOLE=true
GLOBAL_LOGGING_ENABLE_FILE=true
NLP_SERVER_TIMEOUT=30

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Execution Settings
THRASH_MAX_CONCURRENT_TESTS=3

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
THRASH_ENABLE_CONFIG_CACHING=true
THRASH_CONFIG_CACHE_MAX_ENTRIES=50
THRASH_CONFIG_CACHE_TTL_SECONDS=300
THRASH_CONFIG_CACHE_MAX_MEMORY_MB=25
THRASH_CONFIG_CACHE_FILE_WATCHING=true

# Logging Configuration
THRASH_LOG_FILE=ash-thrash.log
THRASH_LOGS_DIR=./logs
THRASH_LOGGING_ENABLE_DETAILED=true
THRASH_LOGGING_INCLUDE_RAW_LABELS=true
THRASH_LOGGING_TRACE_REQUESTS=true
THRASH_LOGGING_CONFIG_LOADING=true
THRASH_LOGGING_MANAGER_INIT=true
THRASH_LOGGING_ENV_VARS=true

# =============================================================================
# TUNING SUGGESTIONS CONFIGURATION
# =============================================================================
# When to generate tuning suggestions
THRASH_GENERATE_SUGGESTIONS=true
THRASH_SUGGESTION_THRESHOLD=10.0                                                # Generate suggestions if >10% below target
THRASH_CRITICAL_THRESHOLD=20.0                                                  # Mark as critical if >20% below target

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Test Execution
THRASH_RETRY_FAILED_TESTS=true
THRASH_MAX_RETRIES=3
THRASH_RETRY_DELAY_SECONDS=5